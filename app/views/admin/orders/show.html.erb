<p id="notice"></p>
<div class="container">  
 <div class="row">  
  <div class="px-8">
   <h4>注文履歴詳細</h4>
   <h4>登録情報</h4>
   <table class="table">
    <tr>
     <th>購入者</th>
      <td><%= @order.name %></td>
    </tr>
    <tr>
     <th>注文日</th>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
     <th>配送先</th>
     <td><%= @order.address %></td>
  　 </tr>
  　 <tr>
  　  <th>支払方法</th>
     <td><%= @order.payment_method %></td>
  　 </tr>
  　 <tr>
       <th>注文ステータス</th>
       <td>
       <%= form_with model: @order, url: admin_order_path(@order), local:true do |f| %>

         <%= f.select :status, Order.statuses_i18n.invert %>

           <%= f.submit "更新" , class:'btn btn- btn-success' %>
       <% end %>
         
       </td>
    </tr>
   </table>
   <table class="table">
    <thead>
      <tr>
       <th>商品名</th>
       <th>単価(税込)</th>
       <th>個数</th>
       <th>小計</th>
       <th>製造ステータス</th>
      </tr>
    </thead>
    <tbody>
     <% @order_detalis.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td> <%= order_detail.item.price %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.item.price*order_detail.amount %></td>
        <td>
         <%= form_with model: order_detail, url: admin_order_path, local:true do |f| %>
           <%= f.select :maiking_status, OrderDetali.making_statuses_i18n.invert %>
           <%= f.submit "更新" , class:'btn btn- btn-success' %>
         <% end %>
        </td>
      </tr>
     <% end %>
    </tbody>
   </table>
  </div>
  <div class="col-md-3 offset-md-1">
   <table class="table">
    <tr>
     <th>商品合計</th>
     <td><%= @total %>円</td>
    </tr>
    <tr>
     <th>送料</th>
     <td><%= @order.shipping_cost %>円</td>
    </tr>
    <tr>
     <th>請求金額合計</th>
     <td><%= @order.total_payment %>円</td>
    </tr>
   </table>
  </div>
 </div>
</div>
