<p id="notice"></p>

<h4>ジャンル編集</h4>
<% if @genre.errors.any? %>
     <div id="error_explanation">
      <h2><%= pluralize(@genre.errors.count, "error") %> :</h2>
      <ul>
        <% @cart_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
     </div>
    <% end %>
<div class=container>
 <div class=row>
  <div class="px-3 mx-auto">
    <%= form_with model:@genre, url:"/admin/genres/#{@genre.id}", local:true,method: :patch do |f| %>
    <div class="form-group">
    <label for="name">ジャンル名</label>
    <%= f.text_field :name %>
   </div>
   <%=f.submit "変更を保存", class:'btn btn-success' %>
   <% end %>
  </div>
 </div>
</div>
