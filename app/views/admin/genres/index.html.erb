<p id="notice"></p>
<h4>ジャンル一覧・追加</h4>

<div class=container>
 <div class=row>
  <div class="px-3 mx-auto">
   <%= form_with model: @genre, url:'/admin/genres', local:true do |f| %>
　　 <label for="name">ジャンル名</label>
     <%= f.text_field :name, :placeholder => "ジャンル名" %>
     <%=f.submit "新規登録", class:'btn btn-success' %>
   <% end %>
    <hr>
    <table class="table">
    <thead>
     <tr>
      <th>ジャンル</th>
     </tr>
    </thead>
    <tbody>
     <% @genres.each do |genre| %>
     <tr>
       <td><%= genre.name %></td>
       <td><%= link_to "編集", edit_admin_genre_path(genre.id), class:'btn btn-success' %></td>
     </tr>
     <% end %>
     </tbody>
   </table>
   </hr>
  </div>
 </div>
</div>
