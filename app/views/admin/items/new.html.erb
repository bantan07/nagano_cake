<p id="notice"></p>
<div class=container>
 <div class=row>
  <div class="px-3 mx-auto">
   <h4>商品新規登録</h4>
    <%= form_with model: @item, url:admin_items_path, local:true do |f| %>
    <div class=form-group>
     <label for="Image_id">商品画像
      <%= f.attachment_field :image %>
     </label>
    </div>
    <div class=form-group>
     <label for="name">商品名
      <%=f.text_field :name, :placeholder => "商品名" %>
     </label>
    </div>
    <div class=form-group>
     <label for="introduction">商品説明
      <textarea cols="30" rows="5"placeholder="ここに説明文を記述します"></textarea>
     </label>
    </div>
    <div class=form-group>
     <label for="name">ジャンル
       <%= f.collection_select :genre_id, @genres, :id, :name, "--選択してください--" => "--選択してください--" %>
     </label>
    </div>
    <div class=form-group>
     <label for="item_name">税抜価格
      <%=f.text_field :price, :placeholder =>"1000" %>円
     </label>
    </div>
    <div class=form-group>
     <label for="sale">販売ステータス
      <%= f.radio_button(:is_active, true) %>
      <%= f.label :is_active, "販売中", style: "display: inline-block;" %>
      <%= f.radio_button(:is_active, false) %>
      <%= f.label :is_active, "販売停止中", style: "display: inline-block;" %>
     </label>
    </div>
     <div class="text-center">
     <%=f.submit "新規登録", class:'btn btn-success'  %>
     <% end %>
   </div>
 </div>
</div>