<p id="notice"></p>

<div class="container">
 <div class="row">
  <div class="px-10 mx-auto">
   <h4>注文履歴一覧</h4>
　 <table class="table">
　  <thead>
     <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
     </tr>
    </thead>
    <tbody>
     <% @orders.each do |order| %>
　　 <tr>
　　   <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %></td>
　　   <td><%= order.name %></td>
　　   <% @amount = 0 %>
　　   <% order.order_detalis.each do |order_detail| %>
　　   <% @amount+= order_detail.amount %>
　　   <% end %>
　　   <td><%= @amount %></td>
     </tr>
    <% end %>
    </tbody>
　 </table>
  </div>
 </div>
</div>