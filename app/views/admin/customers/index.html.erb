<p id="notice"></p>
<h4>会員一覧</h4>
<div class="container">
 <div class="row">
  <div class="px-3 mx-auto">
　 <table class="table">
    <thead>
     <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
     </tr>
    </thead>
    <tbody>
　　<% @customers.each do |customer| %>
　　 <tr>
　　   <td><%= customer.id %></td>
　　   <td><%= link_to customer.name, admin_customer_path(customer.id) %></td>
　　   <td><%= customer.email %></td>
　　   <td><%= item.is_active %> </td>
      </tr>
     <% end %>
     </div>
    </div>
  </div>
 </div>