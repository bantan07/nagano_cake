<p id="notice"></p>

<div class=container>
 <div class=row>
  <div class="px-3">
   <h4>
    <%= @customer.last_name + @customer.first_name %>
    の会員情報編集
    </h4>
    <%= form_with model:@customer, url: admin_customer_path(@customer.id), local:true,method: :patch do |f| %>
    <div class=group>
     <label for="id">会員ID
      <%= @customer.id %>
     </label>
    </div>
    <div class="form-group">
     <label for="name">氏名
     <%=f.text_field :last_name %>
     <%=f.text_field :first_name %>
     </label>
   </div>
   <div class="form-group">
    <label for="name_kana">フリガナ
      <%=f.text_field :last_name_kana %>
     <%=f.text_field :first_name_kana %>
    </label>
   </div>
   <div class="form-group">
     <label for="postal_code">郵便番号
      <%= f.text_field :postal_code %>
    </label>
   </div>
   <div class=form-group>
     <label for="address">住所
      <%= f.text_field :address, :size=>"60" %>
     </label>
   </div>
   <div class=form-group>
     <label for="telephone_number">電話番号
      <%=  f.text_field :telephone_number %>
     </label>
    </div>
   <div class=form-group>
     <label for="email">メールアドレス
      <%= f.text_field :email %>
     </label>
   </div>
   <div class=form-group>
     <label for="sale">会員ステータス
      <%= f.radio_button(:is_active, true) %>
      <%= f.label :is_active, "有効", style: "display: inline-block;" %>
      <%= f.radio_button(:is_active, false) %>
      <%= f.label :is_active, "退会", style: "display: inline-block;" %>
    </label>
   </div>
    <%=f.submit "変更を保存", class:'btn btn-success'  %>
    <% end %>
  </div>
 </div>
</div>
