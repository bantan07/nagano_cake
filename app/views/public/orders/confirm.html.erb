<p id="notice"></p>

<div class="container px-5 px-sm-0">  
 <div class="row"> 
 <h4>注文情報確認</h4>
  <div class="col-md-5">
    
    <hr>
     <table border="1">
      <% @cart_items.each do |cart_item| %>
       <tr>
        <thead>
         <th>商品名</th>
         <th>単価(税込)</th>
         <th>数量</th>
         <th>小計</th>
        </thead>
       </tr>
       <tr>
        <tbody>
         <td><%= cart_item.item.name %></td>
         <td><%= cart_item.item.price %> </td>
         <td><%= cart_item.amount %></td>
         <td><%= (cart_item.item.price*cart_item.amount).to_s(:delimited) %></td>
        </tbody>
       </tr>
      <% end %>
     </table>
    </hr>
    <h4>支払方法</h4>
        <%= @order.payment_method %>
       <h4>お届け先</h4>
       〒<%= @order.postal_code %>
         <%= @order.address %>
         <%= @order.name %></br>
       <%= form_with model: @order, url: orders_complete_path, local:true do |f| %>
         <%= f.submit "注文を確定する", class:'btn btn-success' %>
       <% end %>
  </div>
  <div class="col-md-3 offset-md-1">
      <hr>
       <table border="1">
        <thead>
          <tr>
            <th>送料</th>
            <th>商品合計</th>
            <th>請求金額</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @order.shipping_cost %></td> 
            <td>
             <% @sum = 0 %>
             <% @cart_items.each do |cart_item| %>
             <% @sum += cart_item.item.price*cart_item.amount %>
             <% end %>
             <%= @sum %>
              <%#= (cart_item.item.price*cart_item.amount).to_s(:delimited) %>
           </td>
            <td><%= @order.total_payment %></td>
          </tr>
        </tbody>
       </table>
      </hr>
  </div>
 </div>
</div>

