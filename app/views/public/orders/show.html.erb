<p id="notice"></p>

<div class="container px-5 px-sm-0">  
 <div class="row"> 
 <h4>注文履歴詳細</h4>
  <div class="col-md-5">
   <h5>注文情報</h5>
    <hr>
     <table border="1">
       <tr>
        <th>注文日</th>
         <td><%= @order.created_at %> </td>
       </tr>
       <tr>
        <th>配送先</th>
         <td><%= @order.address %> </td>
       </tr>
       <tr>
        <th>支払方法</th>
         <td><%= @order.payment_method %> </td>
       </tr>
       <tr>
        <th>ステータス</th>
         <td><%= @order.status %> </td>
       </tr>
     </table>
    </hr>
  </div>
  <div class="col-md-4 offset-md-1">
    <h5>請求金額</h5>
      <hr>
       <table border="1">
        <tr>
         <th>商品合計</th>
          <td><%= @order.price %></td>
        </tr>
        <tr>
         <th>発送料</th>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
         <th><h5>ご請求額</h5></th>
          <td><%= @order.total_payment %></td>
        </tr>
       </table>
      </hr>
  </div>
  <div class="col-md-5">
    <h5>注文内容</h5>
     <hr>
       <table border="1">
        <tr>
         <th>商品</th>
          <td><%= @order.item %></td>
        </tr>
        <tr>
         <th>単価(税込)</th>
          <td><%= @order.price %></td>
        </tr>
        <tr>
         <th>個数</th>
          <td><%= @order.amount %></td>
        </tr>
        <tr>
         <th>小計</th>
          <td><%= @order.total_payment %></td>
        </tr>
     <hr>
  </div>
 </div>
</div>
