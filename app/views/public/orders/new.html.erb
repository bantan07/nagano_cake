<p id="notice"></p>
<h4>注文情報入力</h4>
<div class=container>
 <div class=row>
  <div class="px-10 mx-auto">
    <%= form_with model: @order, url: orders_confirm_path, local:true do |f| %>
    <div class=form-group>
     <label for="payment_method">支払方法</br>
      <%= f.radio_button :payment_method, "クレジットカード" %> クレジットカード</br>
      <%= f.radio_button :payment_method, "銀行振込" %> 銀行振込
     </label>
    </div>
　　<div class=form-group>
     <label for="address">お届け先</br>
      <%= f.radio_button :address_option, 1 %> ご自身の住所</br>
      〒<%= @order.customer.postal_code %>
        <%= @order.customer.address %>
        <%= @order.customer.last_name + @order.customer.first_name %></br>
      <%= f.radio_button :address_option, 2 %> 登録住所から選択</br>
      〒<%= f.select :address_id, @addresses.all.map { |address|  ["#{address.postal_code}" "#{address.address}" "#{address.name}" , address[:id]]} %>
     </label>
    </div>
    <div class=form-group>
     <label for="postal_code">郵便番号(ハイフンなし)
      <%= f.text_field :postal_code, :placeholder => "0000000" %>
     </label>
    </div>
    <div class=form-group>
     <label for="address">住所
      <%= f.text_field :address, :size=>"60", :placeholder => "東京都渋谷区代々木神園町0-0" %>
     </label>
    </div>
    <div class=form-group>
     <label for="name">宛名
      <%= f.text_field :name, :placeholder => "令和道子" %>
     </label>
    </div>
     <%= f.submit "確認画面へ進む", class:'btn btn-primary' %>
    <% end %>
   </div>
 </div>
</div>