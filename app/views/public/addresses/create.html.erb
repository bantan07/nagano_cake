<p id="notice"></p>
<h4>配送先住所/一覧</h4>
<div class=container>
 <div class=row>
  <div class="px-8 mx-auto">
   <%= form_with model: @address, url: addresses_create_path, local:true do |f| %>
　　 <label for="postal_code">郵便番号(ハイフンなし)</label>
     <%= f.text_field :postal_code, :placeholder => "0000000" %>
     <label for="address">住所</label>
     <%= f.text_field :address, :placeholder => "東京都渋谷区代々木神園町0-0" %>
     <label for="name">宛名</label>
     <%= f.text_field :postal_code, :placeholder => "令和道子" %>
     <%=f.submit "新規登録", class:'btn btn-success' %>
   <% end %>
    <hr>
    <table border="1">
    <thead>
     <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th></th>
      <th>宛名</th>
      <th
     </tr>
    </thead>
    <tbody>
     <% @addresses.each do |address| %>
     <tr>
       <td><%= address.postal_code %></td>
       <td><%= address %></td>
       <td><%= address.name %></td>
       <td><%= link_to "編集する", addresses_edit_path(address.id), class:'btn btn-success' %></td>
       <td><%= link_to "削除する", addresses__path(address.id),method: :delete, data: { confirm: "本当に消しますか?" }, class:'btn btn-danger' %></td>
     </tr>
     <% end %>
     </tbody>
   </table>
   </hr>
  </div>
 </div>
</div>
