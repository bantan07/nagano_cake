<p id="notice"></p>
<div class=container>
 <div class=row>
  <div class="px-8 mx-auto">
  <h4>配送先編集</h4>
    <%= form_with model:@address, url: address_path, local:true, method: :patch do |f| %>
    <div class="form-group">
     <label for="postal_code">郵便番号(ハイフンなし)
      <%= f.text_field :postal_code %>
     </label>
    </div>
    <div class="form-group">
     <label for="address">住所
      <%= f.text_field :address, :size=>"60" %>
     </label>
    </div>
    <div class="form-group">
     <label for="name">宛名
      <%= f.text_field :name %>
     </label>
    </div>
    <div class="container bg-light">
     <div class="text-right">
     <%=f.submit "変更内容を保存", class:'btn btn-success' %>
     </div>
    </div>
   <% end %>
  </div>
 </div>
</div>
