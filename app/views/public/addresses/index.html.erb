<p id="notice"></p>
<h4>配送先住所/一覧</h4>
<div class=container>
 <div class=row>
  <div class="px-8 mx-auto">
   <%= form_with model: @address, url: addresses_path, local:true do |f| %>
    <div class=form-group>
     <label for="postal_code">郵便番号(ハイフンなし)
      <%= f.text_field :postal_code, :placeholder => "0000000" %>
     </label>
    </div>
    <div class=form-group>
     <label for="address">住所
      <%= f.text_field :address, :size=>"60", :placeholder => "東京都渋谷区代々木神園町0-0" %>
     </label>
    </div>
    <div class=form-group>
     <label for="name">宛名
      <%= f.text_field :name, :placeholder => "令和道子" %>
     </label>
    </div>
　    <%=f.submit "新規登録", class:'btn btn-success' %>
      <% end %>
    <hr>
    <table border="1">
    <thead>
     <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
     </tr>
    </thead>
    <tbody>
     <% @addresses.each do |address| %>
     <tr>
       <td><%= address.postal_code %></td>
       <td><%= address.address %></td>
       <td><%= address.name %></td>
       <td><%= link_to "編集する", edit_address_path(address.id), class:'btn btn-success' %></td>
       <td><%= link_to "削除する", addresses_path(address.id),method: :delete, class:'btn btn-danger' %></td>
     </tr>
     <% end %>
     </tbody>
   </table>
   </hr>
  </div>
 </div>
</div>
