<p id="notice"></p>
<div class="container">
 <div class="row">
  <div class="px-5 mx-auto">
    <h4>ショッピングカート</h4>
    <%= link_to "カートを空にする", cart_items_path, method: :delete, class:'btn btn-danger' %>
    <table border="1">
    <thead>
     <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
     </tr>
    </thead>
    <tbody>
     <% @sum = 0 %>
     <% @cart_items.each do |cart_item| %>
      <tr>
       <td>
       <%= attachment_image_tag cart_item.item, :image, :fill, 50, 30, fallback: "image.png" %>
       <%= cart_item.item.name %>
       </td>
        <td><%= cart_item.item.price %></td>
        <td>
         <%= form_with model: cart_item, url:cart_item_path(cart_item), local:true do |f| %>
          <%= f.select :amount, autocomplete: "個数選択" %>
          <%= f.submit "変更", class:'btn btn-success' %>
         <% end %>
       </td>
       <% @sum += cart_item.item.price*cart_item.amount %>
       <td><%= (cart_item.item.price*cart_item.amount).to_s(:delimited) %></td>
       </td>
       <td><%= link_to "削除", cart_items_path, method: :delete, class:'btn btn-danger' %></td>
     </tr>
    <% end %>
    </tbody>
    </table>
    <table border="1">
      <tr>
       <th>合計金額</th>
       <td><%= @sum %></td>
      </tr>
    </table>
   <%= link_to "買い物を続ける", items_path, class:'btn btn-primary' %>
   <%= link_to "情報入力に進む", new_order_path, class:'btn btn-success' %>
  </div>
 </div>
</div>